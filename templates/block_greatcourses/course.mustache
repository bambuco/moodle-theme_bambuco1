{{!
    @template block_greatcourses/main

    This template renders the template content area for a resource.

    Example context (json):
    {}
}}

<div class="panel panel-default coursebox coursecategory-{{category}} state-{{#active}}active{{/active}}{{^active}}waiting{{/active}} {{#paymenturl}}type-premium{{/paymenturl}}">
    <div class="panel-heading">
        <a class="" title="{{{shortname}}}" href="{{{baseurl}}}/blocks/greatcourses/detail.php?id={{{id}}}">
            {{{fullname}}}
        </a>
        {{#rating}}
        <div class="greatcourses-ranking-stars">
            <div class="greatcourses-ranking-stars-bar" style="width: {{percent}}%;"></div>
            {{#pix}}stars_empty, block_greatcourses{{/pix}}
        </div>
        {{/rating}}
    </div>
    <div class="panel-body clearfix">
        <div class="courseimage" {{#imagepath}}style="background-image: url({{imagepath}});"{{/imagepath}}></div>
        {{{summary}}}
    </div>
    <div class="panel-foot clearfix">
        <a class="coursebtn submit btn btn-info btn-sm" href="{{{baseurl}}}/blocks/greatcourses/detail.php?id={{{id}}}">
            <span class="get_stringlink">{{# str }} showmore, block_greatcourses {{/ str }}</span>
        </a>
    </div>
    {{^active}}
        <div class="waiting-label">{{#str}}waiting, block_greatcourses{{/str}}</div>
    {{/active}}
</div>
