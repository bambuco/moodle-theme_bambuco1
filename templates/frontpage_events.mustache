{{!
    @template theme_bambuco1/frontpage_events

    Blocks drawer template

}}
{{#hasevents}}
    <div id="frontpage-events" class="frontpage-events">
        <div class="container">
            <h2>{{#str}}eventtitle, theme_bambuco1{{/str}}</h2>
            <h3>{{#str}}eventsubtitle, theme_bambuco1{{/str}}</h3>
            <div class="events-list">
            {{#event}}
                <div class="one-event">
                    <a href="{{{ url }}}" title="{{#str}}readmore, theme_bambuco1{{/str}}">
                        <img src="{{{ image }}}" />
                        <div class="more" {{#color}}style="background-color: {{{ color }}}"{{/color}}><i class="fa fa-angle-right"></i></div>
                        <div class="overlay">
                            <img src="{{{ icon }}}" />
                            <p>
                            {{{ text }}}
                            </p>
                        </div>
                    </a>
                </div>
            {{/event}}
            </div>
        </div>
    </div>
{{/hasevents}}