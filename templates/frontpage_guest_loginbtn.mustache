{{!
    @template theme_bambuco1/frontpage_guest_loginbtn

    Guest frontpage template.

    BambuCo 1 frontpage guest layout template.

    Context variables required for this template:
    * loginurl - The login token
    * logintoken - The csrf token

    Example context (json):
    {
        "loginurl": "siteurl/login.php",
        "logintoken":"abcde123"
    }
}}

<div class="usermenu d-none d-lg-block">
    <div class="dropdown">
        <a class="btn btn-login-top dropdown-toggle" aria-haspopup="true" aria-expanded="false" data-toggle="dropdown">
            <i class="fa fa-power-off"></i> {{#str}}login{{/str}}
        </a>

        <div id="loginbox" class="frontpagelogin dropdown-menu align-tl-bl">
            <div class="card">
                {{>theme_bambuco1/frontpage_login}}
            </div>
        </div>

        {{#cansignup}}
        <a href="{{{ config.wwwroot }}}/login/signup.php" class="btn btn-login-top">
            <i class="fa fa-user-circle"></i> {{#str}}firsttime{{/str}}
        </a>
        {{/cansignup}}
    </div>
</div>
<div class="usermenu d-lg-none">
    <a class="btn btn-login-top" href="{{{loginurl}}}">
        <i class="fa fa-power-off"></i> {{#str}}login{{/str}}
    </a>

    {{#cansignup}}
    <a href="{{{ config.wwwroot }}}/login/signup.php" class="btn btn-login-top">
        <i class="fa fa-user-circle"></i> {{#str}}firsttime{{/str}}
    </a>
    {{/cansignup}}
</div>