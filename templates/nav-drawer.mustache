{{!
    @template theme_bambuco1/nav-drawer

    Nav drawer template

    Example context (json): {}
}}
<div id="nav-drawer" data-region="drawer" class="hidden-print moodle-has-zindex {{^navdraweropen}}closed{{/navdraweropen}}" aria-hidden="{{#navdraweropen}}false{{/navdraweropen}}{{^navdraweropen}}true{{/navdraweropen}}" tabindex="-1">
    {{#hasdrawertoggle}}
        <div data-region="drawer-toggle" class="d-none d-lg-block mr-3 drawer-toggle">
            <button aria-expanded="{{#navdraweropen}}true{{/navdraweropen}}{{^navdraweropen}}false{{/navdraweropen}}" aria-controls="nav-drawer" type="button" class="nav-link mr-1" data-action="toggle-drawer" data-side="left" data-preference="drawer-open-nav"><i class="slicon-menu"></i><span class="sr-only">{{#str}}sidepanel, core{{/str}}</span></button>
        </div>
    {{/hasdrawertoggle}}
    {{> theme_bambuco1/flat_navigation }}
</div>

<div id="nav-drawer-footer">
    <span id="themesettings-control">
        <i title="{{#str}}themesettingstitle, theme_bambuco1{{/str}}"
           class="fa fa-universal-access">
        </i>
        <span class="text">{{#str}}themesettingstitle, theme_bambuco1{{/str}}</span>
    </span>
</div>
